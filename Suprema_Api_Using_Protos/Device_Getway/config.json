{
  "cert": {
    "dir": "cert",
    "ca_cert": "ca.crt",
    "ca_key": "ca_key.pem",
    "server_cert": "server.crt",
    "server_key": "server_key.pem",  
    "self_signed": true
  },

"device_server": {
    "ip": "",    
    "port": 51211,            
    "ssl_port": 0,      
    "reconnect_interval": 3000
},
  
  "rpc_server": {
    "ip": "localhost",   
    "port": 4000,
    "max_recv_size": 75497472
  },

  "timeout": {
    "cmd": 10000,
    "long_cmd": 20000,
    "upgrade_cmd": 30000,
    "input_cmd": 20000,
    "face_input_cmd": 60000,
    "keep_alive": 32000
  },  

  "master_gateway": {
    "use": false,
    "ip": "",
    "port": 4010
  },

  "log": {
    "level": 4,                
    "level_desc": "0 - no logging, 5 - most verbose",
    "use_file": true,
    "filename": "logs/gateway.log",
    "max_size_MB": 100,
    "max_days": 30,
    "max_backups": 100,
    "append_mode": false
  }
}